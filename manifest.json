{
  "manifest_version": 2,
 
  "name": "NPM + Repl.it",
  "version": "0.0.1",
  "description": "Adds a try it on repl.it link to npm package pages",
  "web_accessible_resources": [
    "index.html",
    "index.js",
    "style.css"
  ],
  "content_scripts": [{
    "js": ["link-generator.js"],
    "matches": ["https://www.npmjs.com/package/*"]
  }]
}